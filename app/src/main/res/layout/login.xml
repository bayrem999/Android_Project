<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Registration Form Layout -->

    <RelativeLayout
        android:id="@+id/registrationForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/tunisian_white"
        android:elevation="8dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Add your registration form elements here -->
        <EditText
            android:id="@+id/editTextCin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="CIN"
            android:inputType="text"
            android:backgroundTint="@color/tunisian_red" />

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextCin"
            android:layout_marginTop="8dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:backgroundTint="@color/tunisian_red" />

        <EditText
            android:id="@+id/editTextAuthCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPhoneNumber"
            android:layout_marginTop="8dp"
            android:hint="Authentication Code"
            android:inputType="textPassword"
            android:backgroundTint="@color/tunisian_red" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextAuthCode"
            android:layout_marginTop="16dp"
            android:text="Register"
            android:background="@color/tunisian_red"
            android:textColor="@color/tunisian_white"
            android:elevation="4dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
